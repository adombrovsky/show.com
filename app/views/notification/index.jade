div(ng-controller="NotificationCtrl")
    h2 Notification list
        button.pull-right.btn.btn-primary.set-as-read(ng-click="markNotificationAsRead()") Mark all as read
    .alert.alert-block.alert-success.fade.in(ng-repeat="notification in notifications")
        a.close.set-as-read(type="button", ng-click="markNotificationAsRead(getNotificationId(notification));") &times;
        div(ng-bind-html="getNotificationText(notification)")
