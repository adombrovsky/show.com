.modal-header
    button(type="button", class="close", data-dismiss="modal", aria-hidden="true" ) &times;
    h3  Login Form
.modal-body
    form.form-horizontal#login_form(ng-controller="LoginCtrl",ng-submit="login()", name="LoginForm", autocomplete="off")
        .control-group
            label.control-label(for="inputEmail") Email
            .controls
                input(type="text", id="inputEmail", ng-required="true", placeholder="Email", name="email", autocomplete="off", ng-model="user.email")
        .control-group
            label.control-label(for="inputPassword") Password
            .controls
                input(type="password", id="inputPassword", ng-required="true", placeholder="Password", autocomplete="off", name="password", ng-model="user.password")
        .control-group
            .controls
                input(type="submit", class="btn btn-success offset1 span2", value="Sign In")
        .control-group
            .controls
                a(href='/login/google/', class="btn btn-primary span2 pull-right") Login with google
.modal-footer
    a(href="#", class="btn", ng-click="close()") Close